<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dinner_recyclerview_two_image_layout"
    android:contentDescription="只有两张图片"
    android:layout_weight="1"
    android:orientation="horizontal">


    <ImageView

        android:layout_weight="1"
        android:id="@+id/dinner_recyclerview_one_image_introduce"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:layout_marginRight="@dimen/dimen_10px"
        android:src="@mipmap/ic_major_suit_low_price" />
    <ImageView
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/dimen_10px"
        android:id="@+id/dinner_recyclerview_two_image_introduce"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@mipmap/ic_major_suit_low_price" />
</LinearLayout>