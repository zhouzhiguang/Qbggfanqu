<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_800px"
    android:orientation="vertical">

    <ImageView

        android:id="@+id/selectionshare_image"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:scaleType="center"
        android:src="@mipmap/ic_share_image"
        android:layout_marginTop="@dimen/dimen_20px"
        android:layout_weight="8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_marginLeft="@dimen/dimen_50px"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/selectionshare_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:text="身体被掏空？你需要一锅让身体被填满的小龙虾"
            android:textSize="@dimen/dimen_45px" />

        <TextView
            android:id="@+id/selectionshare_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20px"
            android:text="快扶朕起来!朕要吃小龙虾"
            android:textColor="@color/selectionshare_content_color"
            android:textSize="@dimen/dimen_40px" />
    </LinearLayout>
</LinearLayout>