<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_seting_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F6F6F6"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="@dimen/dimen_80px"
        android:background="@color/white"
        android:gravity="right"
        android:minWidth="?attr/actionBarSize"
        app:titleTextAppearance="@style/Toolbar.TitleText">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/setting"
            android:textColor="@color/color_423A59"
            android:textSize="@dimen/dimen_60px" />
    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30px"
        android:background="@color/wait_for_pay_line_color"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1000px"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/seting_person_data"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_120px"
            android:layout_marginLeft="@dimen/dimen_40px"
            android:layout_marginRight="@dimen/dimen_40px"
            android:layout_weight="1"
            android:background="@drawable/fragment_person_mine_dinner_select"
            android:clickable="true"
            android:contentDescription="个人资料"
            android:drawablePadding="@dimen/dimen_20px"
            android:drawableRight="@mipmap/ic_right_large_arrows"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dimen_20px"
            android:paddingLeft="@dimen/dimen_20px"
            android:paddingRight="@dimen/dimen_20px"
            android:paddingTop="@dimen/dimen_20px"
            android:text="@string/person_data"
            android:textSize="@dimen/dimen_50px" />

        <View
            android:layout_marginTop="@dimen/dimen_10px"
            android:layout_marginBottom="@dimen/dimen_10px"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_3px"
            android:layout_marginLeft="@dimen/dimen_60px"
            android:layout_marginRight="@dimen/dimen_60px"
            android:background="@color/wait_for_pay_line_color"></View>

        <TextView
            android:id="@+id/seting_person_account_safe"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_120px"
            android:layout_marginLeft="@dimen/dimen_40px"
            android:layout_marginRight="@dimen/dimen_40px"
            android:layout_weight="1"
            android:background="@drawable/fragment_person_mine_dinner_select"
            android:clickable="true"
            android:contentDescription="账户安全"
            android:drawablePadding="@dimen/dimen_20px"
            android:drawableRight="@mipmap/ic_right_large_arrows"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dimen_20px"
            android:paddingLeft="@dimen/dimen_20px"
            android:paddingRight="@dimen/dimen_20px"
            android:paddingTop="@dimen/dimen_20px"
            android:text="@string/account_safe"
            android:textSize="@dimen/dimen_50px" />

        <View
            android:layout_marginTop="@dimen/dimen_10px"
            android:layout_marginBottom="@dimen/dimen_10px"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_3px"
            android:layout_marginLeft="@dimen/dimen_60px"
            android:layout_marginRight="@dimen/dimen_60px"
            android:background="@color/wait_for_pay_line_color"></View>


        <TextView
            android:id="@+id/seting_person_meal_privacy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_120px"
            android:layout_marginLeft="@dimen/dimen_40px"
            android:layout_marginRight="@dimen/dimen_40px"
            android:layout_weight="1"
            android:background="@drawable/fragment_person_mine_dinner_select"
            android:clickable="true"
            android:contentDescription="饭友隐私"
            android:drawablePadding="@dimen/dimen_20px"
            android:drawableRight="@mipmap/ic_right_large_arrows"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dimen_20px"
            android:paddingLeft="@dimen/dimen_20px"
            android:paddingRight="@dimen/dimen_20px"
            android:paddingTop="@dimen/dimen_20px"
            android:text="@string/meal_privacy"
            android:textSize="@dimen/dimen_50px" />


        <View
            android:layout_marginTop="@dimen/dimen_10px"
            android:layout_marginBottom="@dimen/dimen_10px"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_3px"
            android:layout_marginLeft="@dimen/dimen_60px"
            android:layout_marginRight="@dimen/dimen_60px"
            android:background="@color/wait_for_pay_line_color"></View>

        <TextView
            android:id="@+id/seting_person_new_notifications"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_120px"
            android:layout_marginLeft="@dimen/dimen_40px"
            android:layout_marginRight="@dimen/dimen_40px"
            android:layout_weight="1"
            android:background="@drawable/fragment_person_mine_dinner_select"
            android:clickable="true"
            android:contentDescription="新消息提醒"
            android:drawablePadding="@dimen/dimen_20px"
            android:drawableRight="@mipmap/ic_right_large_arrows"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dimen_20px"
            android:paddingLeft="@dimen/dimen_20px"
            android:paddingRight="@dimen/dimen_20px"
            android:paddingTop="@dimen/dimen_20px"
            android:text="@string/new_notifications"
            android:textSize="@dimen/dimen_50px" />


        <View
            android:layout_marginTop="@dimen/dimen_10px"
            android:layout_marginBottom="@dimen/dimen_10px"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_3px"
            android:layout_marginLeft="@dimen/dimen_60px"
            android:layout_marginRight="@dimen/dimen_60px"
            android:background="@color/wait_for_pay_line_color"></View>

        <TextView
            android:id="@+id/seting_person_clean_cache"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_120px"
            android:layout_marginLeft="@dimen/dimen_40px"
            android:layout_marginRight="@dimen/dimen_40px"
            android:layout_weight="1"
            android:background="@drawable/fragment_person_mine_dinner_select"
            android:clickable="true"
            android:contentDescription="清理缓存"
            android:drawablePadding="@dimen/dimen_20px"
            android:drawableRight="@mipmap/ic_right_large_arrows"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dimen_20px"
            android:paddingLeft="@dimen/dimen_20px"
            android:paddingRight="@dimen/dimen_20px"
            android:paddingTop="@dimen/dimen_20px"
            android:text="@string/clean_cache"
            android:textSize="@dimen/dimen_50px" />


        <View
            android:layout_marginTop="@dimen/dimen_10px"
            android:layout_marginBottom="@dimen/dimen_10px"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_3px"
            android:layout_marginLeft="@dimen/dimen_60px"
            android:layout_marginRight="@dimen/dimen_60px"
            android:background="@color/wait_for_pay_line_color"></View>


        <TextView
            android:id="@+id/seting_person_about_app"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_120px"
            android:layout_marginLeft="@dimen/dimen_40px"
            android:layout_marginRight="@dimen/dimen_40px"
            android:layout_marginBottom="@dimen/dimen_20px"
            android:layout_weight="1"
            android:background="@drawable/fragment_person_mine_dinner_select"
            android:clickable="true"
            android:contentDescription="关于蹭范趣"
            android:drawablePadding="@dimen/dimen_20px"
            android:drawableRight="@mipmap/ic_right_large_arrows"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dimen_20px"
            android:paddingLeft="@dimen/dimen_20px"
            android:paddingRight="@dimen/dimen_20px"
            android:paddingTop="@dimen/dimen_20px"
            android:text="@string/about_app"
            android:textSize="@dimen/dimen_50px" />



    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fragment_home_bg">

        <TextView
            android:id="@+id/seting_exit_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_150px"
            android:layout_alignParentTop="@dimen/dimen_40px"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dimen_60px"
            android:layout_marginRight="@dimen/dimen_60px"
            android:background="@drawable/publish_add_nextstep_selector"
            android:clickable="true"
            android:contentDescription="退出登录"
            android:gravity="center"
            android:text="@string/exit_login"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_55px" />
    </RelativeLayout>

</LinearLayout>
