<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dinner_recyclerview_three_image_layout"
    android:contentDescription="只有三张图片"
    android:layout_weight="1"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/dinner_recyclerview_one_image_introduce"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/dimen_10px"
        android:layout_weight="1"
        android:scaleType="center"
        android:src="@mipmap/ic_major_suit_low_price" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dimen_10px"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/dinner_recyclerview_two_image_introduce"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:scaleType="center"
            android:layout_height="0px"
            android:layout_marginBottom="@dimen/dimen_10px"
            android:src="@mipmap/ic_major_suit_low_price" />
        <ImageView
            android:id="@+id/dinner_recyclerview_three_image_introduce"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dimen_10px"
            android:scaleType="center"
            android:layout_height="0px"
            android:src="@mipmap/ic_major_suit_low_price" />

    </LinearLayout>
</LinearLayout>