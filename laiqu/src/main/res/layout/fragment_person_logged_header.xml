<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_person_logged_head_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/red_bg"
    android:orientation="vertical"
    android:tag="已经登录下显示"
    android:visibility="gone">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_350px"
        android:layout_marginTop="@dimen/dimen_40px"
        android:background="@color/red_bg">

        <ImageView
            android:id="@+id/fragment_person_seting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_30px"
            android:layout_marginTop="@dimen/dimen_30px"
            android:contentDescription="设置"
            android:src="@mipmap/ic_seting" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/dimen_200px"
            android:layout_height="@dimen/dimen_200px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dimen_50px"
            android:layout_marginLeft="@dimen/dimen_50px"
            android:contentDescription="头像"
            android:src="@mipmap/ic_default_avatar"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/fragment_person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/profile_image"
            android:layout_below="@+id/fragment_person_seting"
            android:layout_marginLeft="@dimen/dimen_40px"
            android:layout_toRightOf="@id/profile_image"
            android:drawablePadding="@dimen/dimen_20px"
            android:drawableRight="@mipmap/ic_vip_1"
            android:gravity="center_horizontal"
            android:text="王大锤"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_57px" />

        <LinearLayout
            android:id="@+id/fragment_person_vip_layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_65px"
            android:layout_alignLeft="@+id/fragment_person_name"
            android:layout_below="@+id/fragment_person_name"
            android:layout_marginTop="@dimen/dimen_10px"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_person_vip_targ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="@dimen/dimen_15px"
                android:background="@drawable/fragment_person_vip_targ_background"
                android:gravity="center"
                android:paddingBottom="@dimen/dimen_10px"
                android:paddingLeft="@dimen/dimen_15px"
                android:paddingRight="@dimen/dimen_15px"
                android:paddingTop="@dimen/dimen_10px"
                android:text="金牌会员"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_40px" />

            <TextView
                android:id="@+id/fragment_person_partner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dimen_15px"
                android:layout_marginRight="@dimen/dimen_15px"
                android:background="@drawable/fragment_person_vip_targ_background"
                android:contentDescription="合伙人"
                android:gravity="center"
                android:paddingBottom="@dimen/dimen_10px"
                android:paddingLeft="@dimen/dimen_15px"
                android:paddingRight="@dimen/dimen_15px"
                android:paddingTop="@dimen/dimen_10px"
                android:text="@string/partner"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_40px" />

            <TextView
                android:id="@+id/fragment_person_super_foodie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dimen_15px"
                android:layout_marginRight="@dimen/dimen_15px"
                android:background="@drawable/fragment_person_vip_targ_background"
                android:contentDescription="超级吃货"
                android:gravity="center"
                android:paddingBottom="@dimen/dimen_10px"
                android:paddingLeft="@dimen/dimen_15px"
                android:paddingRight="@dimen/dimen_15px"
                android:paddingTop="@dimen/dimen_10px"
                android:text="@string/super_foodie"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_40px" />
        </LinearLayout>

        <TextView
            android:id="@+id/fragment_person_account_management"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/fragment_person_seting"
            android:layout_below="@+id/fragment_person_seting"
            android:layout_marginTop="@dimen/dimen_50px"
            android:contentDescription="帐号管理"
            android:drawableRight="@mipmap/ic_right_arrows"
            android:text="@string/account_management"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_50px"
            android:visibility="gone"

            />
    </RelativeLayout>


</FrameLayout>
