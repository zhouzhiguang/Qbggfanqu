<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_personal_qrcode_business_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="@dimen/dimen_80px"
        android:background="@color/white"
        android:gravity="right"
        android:minWidth="?attr/actionBarSize"
        app:titleTextAppearance="@style/Toolbar.TitleText">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/taste_preference"
            android:textColor="@color/color_423A59"
            android:textSize="@dimen/dimen_60px" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fragment_person_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_60px"
            android:layout_marginTop="@dimen/dimen_60px"
            android:gravity="center"
            android:text="@string/select_taste_preference"
            android:textColor="@color/textGrayLight"
            android:textSize="@dimen/dimen_60px" />

        <com.ihidea.multilinechooselib.MultiLineChooseLayout
            android:id="@+id/taste_preference_flowLayout"
            style="@style/MultiLineChooseLayoutTags.MultiChoose"
            android:layout_gravity="center"
            android:gravity="center"></com.ihidea.multilinechooselib.MultiLineChooseLayout>

    </LinearLayout>
</LinearLayout>
