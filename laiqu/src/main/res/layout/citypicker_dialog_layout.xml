<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_700px"
        android:layout_gravity="center_vertical"
        android:layout_weight="0"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_150px"
            android:layout_gravity="center_horizontal"
            android:background="@color/text_color_GrayLight_more1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/city_picker_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_40px"
                android:layout_marginRight="@dimen/dimen_130px"
                android:layout_weight="1"
                android:clickable="true"
                android:drawablePadding="@dimen/dimen_40px"
                android:gravity="left"
                android:padding="@dimen/dimen_20px"
                android:text="@string/cancel"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_55px" />


            <TextView
                android:id="@+id/city_picker_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="@dimen/dimen_130px"
                android:layout_marginRight="@dimen/dimen_40px"
                android:clickable="true"
                android:drawablePadding="@dimen/dimen_40px"
                android:gravity="center"
                android:padding="@dimen/dimen_20px"
                android:text="@string/ok"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_55px" />

        </LinearLayout>

        <com.qbgg.cenglaicengqu.main.widget.CityPickerLayout
            android:id="@+id/city_picker_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center" />

    </LinearLayout>


</LinearLayout>