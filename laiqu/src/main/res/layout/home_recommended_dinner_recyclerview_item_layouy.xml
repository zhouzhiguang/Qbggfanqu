<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_480px"
    android:layout_height="@dimen/dimen_800px"
    android:background="@color/white"
    android:paddingTop="@dimen/dimen_20px"
    android:contentDescription="主页推荐饭局RecyclerView item 布局"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/recommended_dinner_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:paddingLeft="@dimen/dimen_20px"
        android:paddingRight="@dimen/dimen_20px"
        android:src="@mipmap/ic_launcher"
        android:layout_weight="3" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dimen_20px"
        android:layout_marginLeft="@dimen/dimen_40px"
        android:layout_marginRight="@dimen/dimen_20px"
        android:layout_weight="2">
        <TextView
            android:id="@+id/recommended_dinner_title"
            android:layout_width="wrap_content"
            android:text="神秘空中花园"
            android:textSize="@dimen/dimen_60px"
            android:textColor="@color/textGrayDeep"
            android:layout_height="wrap_content" />

        <TableLayout
            android:layout_marginTop="@dimen/dimen_20px"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:shrinkColumns="1">

        <TextView
            android:id="@+id/recommended_dinner_content"
            android:layout_width="wrap_content"
            android:textSize="@dimen/dimen_40px"
            android:lineSpacingExtra="@dimen/dimen_20px"
            android:text="炎热的夏天，一碗爽口炸酱面就是你的救星"
            android:textColor="@color/textGrayDeep"
            android:layout_height="wrap_content" />
        </TableLayout>

    </LinearLayout>

</LinearLayout>