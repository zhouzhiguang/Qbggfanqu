<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/taste_preference_select_item_text"
        android:layout_width="@dimen/dimen_250px"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_30px"
        android:layout_marginLeft="@dimen/dimen_30px"
        android:layout_marginRight="@dimen/dimen_30px"
        android:layout_marginTop="@dimen/dimen_40px"
        android:background="@drawable/shape_item_select_lable_bg"
        android:gravity="center"
        android:paddingBottom="@dimen/dimen_10px"
        android:paddingTop="@dimen/dimen_10px"
        android:textColor="@color/red_bg"
        android:textSize="@dimen/dimen_50px" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@color/white"
        android:layout_marginRight="@dimen/dimen_20px"
        android:layout_marginTop="@dimen/dimen_20px"
        android:src="@mipmap/ic_delete" />
</FrameLayout>