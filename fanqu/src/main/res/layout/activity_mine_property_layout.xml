<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_seting_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="@dimen/dimen_80px"
        android:background="@color/white"
        android:gravity="right"
        android:minWidth="?attr/actionBarSize"
        app:titleTextAppearance="@style/Toolbar.TitleText">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/mine_wallet"
            android:textColor="@color/textGrayDeep"
            android:textSize="@dimen/dimen_60px" />
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_3px"
            android:background="@color/edit_publis_line_color"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fragment_person_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_270px"
                android:background="@color/white">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/mine_property_head_image"
                    android:layout_width="@dimen/dimen_168px"
                    android:layout_height="@dimen/dimen_168px"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/dimen_40px"
                    android:src="@mipmap/ic_default_avatar"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="@dimen/dimen_5px" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_40px"
                    android:layout_toRightOf="@id/mine_property_head_image"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mine_property_nice_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="王大锤"
                        android:textColor="@color/textGrayDeep"
                        android:textSize="@dimen/dimen_54px" />

                    <TextView
                        android:id="@+id/mine_property_identity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="@dimen/dimen_30px"
                        android:contentDescription="身份标志"
                        android:drawableLeft="@mipmap/ic_real_name_authentication_small"
                        android:drawablePadding="@dimen/dimen_20px"
                        android:gravity="center"
                        android:text="实名用户"
                        android:textColor="@color/textGrayLight"
                        android:textSize="@dimen/dimen_40px" />
                </LinearLayout>

                <TextView
                    android:id="@+id/nice_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:background="@drawable/fragment_person_mine_dinner_select"
                    android:clickable="true"
                    android:drawablePadding="@dimen/dimen_20px"
                    android:drawableRight="@mipmap/icon_right_arrows_gray"
                    android:paddingBottom="@dimen/dimen_40px"
                    android:paddingLeft="@dimen/dimen_40px"
                    android:paddingRight="@dimen/dimen_40px"
                    android:paddingTop="@dimen/dimen_40px"
                    android:text="王大锤"
                    android:textColor="@color/textGrayLight"
                    android:textSize="@dimen/dimen_40px" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_240px"
                android:layout_marginTop="@dimen/dimen_30px"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mine_property_balance_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_60px"
                    android:layout_marginTop="@dimen/dimen_40px"
                    android:src="@mipmap/ic_balance" />

                <TextView
                    android:id="@+id/mine_property_balance_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/mine_property_balance_image"
                    android:layout_marginLeft="@dimen/dimen_40px"
                    android:layout_toRightOf="@id/mine_property_balance_image"
                    android:text="@string/balance"
                    android:textColor="@color/textGrayDeep"
                    android:textSize="@dimen/dimen_47px" />

                <TextView
                    android:id="@+id/mine_property_balance_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/mine_property_balance_text"
                    android:layout_below="@id/mine_property_balance_text"
                    android:layout_marginTop="@dimen/dimen_20px"
                    android:text="￥ 200.00"
                    android:textColor="@color/textGrayLight"
                    android:textSize="@dimen/dimen_40px" />

                <View
                    android:id="@+id/mine_property_line1"
                    android:layout_width="@dimen/dimen_3px"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/dimen_40px"
                    android:layout_marginTop="@dimen/dimen_40px"
                    android:background="@color/edit_publis_line_color"></View>

                <ImageView
                    android:id="@+id/mine_property_bank_card_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_60px"
                    android:layout_marginTop="@dimen/dimen_40px"
                    android:layout_toRightOf="@id/mine_property_line1"
                    android:src="@mipmap/ic_bank_card" />

                <TextView
                    android:id="@+id/mine_property_bank_card_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/mine_property_bank_card_image"
                    android:layout_marginBottom="@dimen/dimen_5px"
                    android:layout_marginLeft="@dimen/dimen_40px"
                    android:layout_toRightOf="@id/mine_property_bank_card_image"
                    android:text="@string/bank_card"
                    android:textColor="@color/textGrayDeep"
                    android:textSize="@dimen/dimen_47px" />

                <TextView
                    android:id="@+id/mine_property_bank_card_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/mine_property_balance_amount"
                    android:layout_alignLeft="@id/mine_property_bank_card_text"
                    android:layout_alignTop="@id/mine_property_balance_amount"
                    android:layout_below="@id/mine_property_bank_card_text"
                    android:text="1 张"
                    android:textColor="@color/textGrayLight"
                    android:textSize="@dimen/dimen_40px" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_240px"
                android:layout_marginTop="@dimen/dimen_30px"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mine_property_integral_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_60px"
                    android:layout_marginTop="@dimen/dimen_40px"
                    android:src="@mipmap/ic_integral" />

                <TextView
                    android:id="@+id/mine_property_integral_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/mine_property_integral_image"
                    android:layout_marginLeft="@dimen/dimen_40px"
                    android:layout_toRightOf="@id/mine_property_integral_image"
                    android:text="@string/integral"
                    android:textColor="@color/textGrayDeep"
                    android:textSize="@dimen/dimen_47px" />

                <TextView
                    android:id="@+id/mine_property_integral_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/mine_property_integral_text"
                    android:layout_below="@id/mine_property_integral_text"
                    android:layout_marginTop="@dimen/dimen_20px"
                    android:text="2000分"
                    android:textColor="@color/textGrayLight"
                    android:textSize="@dimen/dimen_40px" />

                <View
                    android:id="@+id/mine_property_line2"
                    android:layout_width="@dimen/dimen_3px"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/dimen_40px"
                    android:layout_marginTop="@dimen/dimen_40px"
                    android:background="@color/edit_publis_line_color"></View>

                <ImageView
                    android:id="@+id/mine_property_coupon_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_60px"
                    android:layout_marginTop="@dimen/dimen_40px"
                    android:layout_toRightOf="@id/mine_property_line2"
                    android:src="@mipmap/ic_coupon" />

                <TextView
                    android:id="@+id/mine_property_coupon_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/mine_property_coupon_image"
                    android:layout_marginBottom="@dimen/dimen_5px"
                    android:layout_marginLeft="@dimen/dimen_40px"
                    android:layout_toRightOf="@id/mine_property_coupon_image"
                    android:text="@string/accounts_coupon"
                    android:textColor="@color/textGrayDeep"
                    android:textSize="@dimen/dimen_47px" />

                <TextView
                    android:id="@+id/mine_property_coupon_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/mine_property_integral_amount"
                    android:layout_alignLeft="@id/mine_property_coupon_text"
                    android:layout_alignTop="@id/mine_property_integral_amount"
                    android:layout_below="@id/mine_property_coupon_text"
                    android:text="1 张"
                    android:textColor="@color/textGrayLight"
                    android:textSize="@dimen/dimen_40px" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
