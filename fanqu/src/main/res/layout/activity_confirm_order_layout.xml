<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="@dimen/dimen_80px"
        android:background="@color/white"
        android:gravity="right"
        android:minWidth="?attr/actionBarSize"
        app:titleTextAppearance="@style/Toolbar.TitleText">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/more_comment"
            android:textColor="@color/textGrayDeep"
            android:textSize="@dimen/dimen_60px" />

    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_3px"
        android:background="@color/edit_publis_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_270px"
        android:layout_marginLeft="@dimen/dimen_40px"
        android:layout_marginTop="@dimen/dimen_40px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/order_image"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dimen_80px"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_set_meal_default" />

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="@string/set_meal"
                    android:textColor="@color/dinner_recyclerview_attention_color"
                    android:textSize="@dimen/dimen_40px" />

                <TextView
                    android:id="@+id/set_meal_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="30"
                    android:textColor="@color/red_bg"
                    android:textSize="@dimen/dimen_54px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="@string/set_meal_unit"
                    android:textColor="@color/red_bg"
                    android:textSize="@dimen/dimen_44px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="@string/number_people"
                    android:textColor="@color/dinner_recyclerview_attention_color"
                    android:textSize="@dimen/dimen_40px" />

                <TextView
                    android:id="@+id/can_order_number_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="可订餐人数"
                    android:gravity="bottom"
                    android:text="10"
                    android:textColor="@color/dinner_recyclerview_attention_color"
                    android:textSize="@dimen/dimen_40px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="@string/date_time"
                    android:textColor="@color/dinner_recyclerview_attention_color"
                    android:textSize="@dimen/dimen_40px" />

                <TextView
                    android:id="@+id/open_seats_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="开席日期"
                    android:gravity="bottom"
                    android:text="03-01"
                    android:textColor="@color/dinner_recyclerview_attention_color"
                    android:textSize="@dimen/dimen_40px" />

                <TextView
                    android:id="@+id/open_seats_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_40px"
                    android:contentDescription="开吃时间中餐晚餐"
                    android:gravity="bottom"
                    android:text="晚餐"
                    android:textColor="@color/dinner_recyclerview_attention_color"
                    android:textSize="@dimen/dimen_40px" />

                <TextView
                    android:id="@+id/open_seats_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_40px"
                    android:contentDescription="18：30"
                    android:gravity="bottom"
                    android:text="03-01"
                    android:textColor="@color/dinner_recyclerview_attention_color"
                    android:textSize="@dimen/dimen_40px" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_3px"
        android:layout_marginLeft="@dimen/dimen_40px"
        android:layout_marginRight="@dimen/dimen_40px"
        android:layout_marginTop="@dimen/dimen_80px"
        android:background="@color/edit_publis_line_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_150px"
        android:layout_marginLeft="@dimen/dimen_40px"
        android:layout_marginRight="@dimen/dimen_40px"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/buy_number_people"
            android:textColor="@color/textGrayDeep"
            android:textSize="@dimen/dimen_54px" />

        <com.fanqu.main.widget.NumberButton
            android:id="@+id/buy_number_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:editable="false"
            app:textColor="@color/red_bg">

        </com.fanqu.main.widget.NumberButton>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_3px"
        android:layout_marginLeft="@dimen/dimen_40px"
        android:layout_marginRight="@dimen/dimen_40px"
        android:background="@color/edit_publis_line_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_150px"
        android:layout_marginLeft="@dimen/dimen_40px"
        android:layout_marginRight="@dimen/dimen_40px"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/orders_phone_number"
            android:textColor="@color/textGrayDeep"
            android:textSize="@dimen/dimen_54px" />

        <TextView
            android:id="@+id/orders_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="18175861350"
            android:textColor="@color/textGrayDeep"
            android:textSize="@dimen/dimen_48px"></TextView>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30px"
        android:background="@color/edit_publis_line_color" />

    <RelativeLayout
        android:id="@+id/user_discount_coupon_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_150px">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/fragment_person_mine_dinner_select"
            android:drawableRight="@mipmap/icon_right_arrows_gray"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_40px"
            android:paddingRight="@dimen/dimen_40px"
            android:text="@string/user_discount_coupon"
            android:textColor="@color/textGrayDeep"
            android:textSize="@dimen/dimen_54px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_120px"
            android:text="@string/unused"
            android:textColor="@color/textGrayLight"
            android:textSize="@dimen/dimen_44px" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_3px"
        android:layout_marginLeft="@dimen/dimen_40px"
        android:layout_marginRight="@dimen/dimen_40px"
        android:background="@color/edit_publis_line_color" />

    <android.support.v7.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_40px"
        android:layout_marginRight="@dimen/dimen_40px"
        android:background="@null"
        android:hint="@string/give_business_leave_message"
        android:maxLength="30"
        android:minHeight="@dimen/dimen_150px"
        android:textColor="@color/textGrayDeep"
        android:textColorHint="@color/textGrayLight"
        android:textSize="@dimen/dimen_44px" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120px"
        android:background="@color/fragment_person_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen_40px"
        android:text="@string/money_details"
        android:textColor="@color/textGrayDeep"
        android:textSize="@dimen/dimen_44px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_150px"
        android:layout_marginLeft="@dimen/dimen_40px"
        android:layout_marginRight="@dimen/dimen_40px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/total_amount"
            android:textColor="@color/textGrayDeep"
            android:textSize="@dimen/dimen_54px" />

        <TextView
            android:id="@+id/order_total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="总共多少钱"
            android:text="300元"
            android:textColor="@color/red_bg"
            android:textSize="@dimen/dimen_48px" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_3px"
        android:layout_marginLeft="@dimen/dimen_40px"
        android:layout_marginRight="@dimen/dimen_40px"
        android:background="@color/edit_publis_line_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_150px"
        android:layout_marginLeft="@dimen/dimen_40px"
        android:layout_marginRight="@dimen/dimen_40px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/favorable"
            android:textColor="@color/textGrayDeep"
            android:textSize="@dimen/dimen_54px" />

        <TextView
            android:id="@+id/order_favorable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="优惠多少元"
            android:text="0元"
            android:textColor="@color/red_bg"
            android:textSize="@dimen/dimen_48px" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50px"
        android:background="@color/edit_publis_line_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/submit_order"
            android:layout_width="@dimen/dimen_440px"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dimen_20px"
            android:layout_marginRight="@dimen/dimen_20px"
            android:layout_marginTop="@dimen/dimen_20px"
            android:background="@drawable/submit_order_select"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/submit_order"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_60px" />

        <TextView
            android:id="@+id/total_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/submit_order"
            android:layout_marginRight="@dimen/dimen_40px"
            android:layout_toLeftOf="@id/submit_order"
            android:text="￥300"
            android:textColor="@color/red_bg"
            android:textSize="@dimen/dimen_54px" />

        <TextView
            android:id="@+id/total_number_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/submit_order"
            android:layout_marginRight="@dimen/dimen_20px"
            android:layout_toLeftOf="@id/total_money"
            android:text="@string/total_number_people"
            android:textColor="@color/textGrayLight"
            android:textSize="@dimen/dimen_40px" />
    </RelativeLayout>
</LinearLayout>
