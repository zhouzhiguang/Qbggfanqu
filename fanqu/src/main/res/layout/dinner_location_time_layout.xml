<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/dinner_release_location_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:paddingBottom="@dimen/dimen_5px"
            android:src="@mipmap/ic_dinner_release_location" />

        <TextView
            android:id="@+id/dinner_release_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/dinner_release_location_image"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_20px"
            android:layout_toRightOf="@+id/dinner_release_location_image"
            android:text="南城区"
            android:textColor="@color/textGrayLight"
            android:textSize="@dimen/dimen_40px" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/dinner_number_of_people_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:paddingBottom="@dimen/dimen_5px"
            android:src="@mipmap/comui_tab_person_small" />

        <TextView
            android:id="@+id/dinner_release_number_of_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20px"
            android:layout_toRightOf="@+id/dinner_number_of_people_image"
            android:text="8人"
            android:layout_alignParentBottom="true"
            android:textColor="@color/textGrayLight"
            android:textSize="@dimen/dimen_40px" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/dinner_release_time_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/ic_time" />

        <TextView
            android:id="@+id/dinner_release_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_20px"
            android:contentDescription="饭局发布时间"
            android:layout_toRightOf="@+id/dinner_release_time_image"
            android:text="12月1日 18:00"
            android:textColor="@color/textGrayLight"
            android:textSize="@dimen/dimen_40px" />
    </RelativeLayout>
</LinearLayout>