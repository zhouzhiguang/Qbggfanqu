<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_250px"
    android:background="@drawable/fragment_person_mine_dinner_select"
    android:clickable="true"
    android:orientation="horizontal">


    <com.netease.nim.uikit.common.ui.imageview.CircleImageView
        android:id="@+id/eave_words_person_headimage"
        android:layout_width="@dimen/dimen_150px"
        android:layout_height="@dimen/dimen_150px"
        android:layout_gravity="left|center"
        android:src="@mipmap/ic_default_avatar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center">

        <LinearLayout
            android:id="@+id/eave_words_person_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/dimen_20px"
            android:layout_marginBottom="@dimen/dimen_20px"
            android:layout_marginLeft="@dimen/dimen_20px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/eave_words_person_nicename"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_weight="1"
                android:text="范友"
                android:textColor="@color/signed_up_person_nicename_color"
                android:textSize="@dimen/dimen_50px" />

            <TextView
                android:id="@+id/eave_words_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/dimen_20px"
                android:layout_weight="0"
                android:contentDescription="已经报名时间"
                android:text="前天 09:00"
                android:textColor="@color/signed_up_person_nicename_color"
                android:textSize="@dimen/dimen_50px" />
        </LinearLayout>

        <TextView
            android:id="@+id/eave_words_revert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/eave_words_person_layout"
            android:layout_alignStart="@id/eave_words_person_layout"
            android:layout_below="@id/eave_words_person_layout"
            android:text="@string/revert"
            android:textColor="@color/textGrayDeep"
            android:textSize="@dimen/dimen_50px" />

        <TextView
            android:id="@+id/eave_words_revert_who"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/eave_words_revert"
            android:layout_alignTop="@id/eave_words_revert"
            android:layout_below="@id/eave_words_person_layout"
            android:layout_marginLeft="@dimen/dimen_10px"
            android:layout_toRightOf="@id/eave_words_revert"
            android:text="大山深处："
            android:textColor="@color/textGrayDeep"
            android:textSize="@dimen/dimen_50px" />

        <TextView
            android:id="@+id/eave_words_revert_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/eave_words_revert_who"
            android:layout_alignTop="@id/eave_words_revert_who"
            android:layout_below="@id/eave_words_person_layout"
            android:layout_marginLeft="@dimen/dimen_10px"
            android:layout_toRightOf="@id/eave_words_revert_who"
            android:text="东莞莞城接送吗？"
            android:textColor="@color/textGrayDeep"
            android:textSize="@dimen/dimen_50px" />
        <TextView
            android:id="@+id/eave_words_revert_content_much"
            android:contentDescription="评论的内容太多了"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/eave_words_revert_who"
            android:layout_alignTop="@id/eave_words_revert_who"
            android:layout_below="@id/eave_words_person_layout"
            android:layout_marginLeft="@dimen/dimen_10px"
            android:layout_toRightOf="@id/eave_words_revert_who"
            android:text="东莞莞城接送吗？"
            android:textColor="@color/textGrayDeep"
            android:textSize="@dimen/dimen_50px" />

    </RelativeLayout>

</LinearLayout>