<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_personal_qrcode_business_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="@dimen/dimen_80px"
        android:background="@color/white"
        android:gravity="right"
        android:minWidth="?attr/actionBarSize"
        app:titleTextAppearance="@style/Toolbar.TitleText">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/personal_qrcode_business"
            android:textColor="@color/color_423A59"
            android:textSize="@dimen/dimen_60px" />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/textGrayLight">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1300px"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dimen_60px"
            android:layout_marginRight="@dimen/dimen_60px"
            android:background="@drawable/personal_qrcode_business_shape"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/personal_qrcode_business_date_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_80px"
                android:layout_marginTop="@dimen/dimen_80px">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/personal_qrcode_business_headimage"
                    android:layout_width="@dimen/dimen_180px"
                    android:layout_height="@dimen/dimen_180px"
                    android:contentDescription="头像"
                    android:src="@mipmap/ic_default_avatar" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/dimen_30px"
                    android:layout_toRightOf="@id/personal_qrcode_business_headimage"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/personal_qrcode_business_nicename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_20px"
                        android:text="王大锤"
                        android:textColor="@color/textGrayDeep"
                        android:textSize="@dimen/dimen_50px" />

                    <TextView
                        android:id="@+id/personal_qrcode_business_identity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_20px"
                        android:contentDescription="身份"
                        android:text="金牌会员 区域创始人"
                        android:textColor="@color/color_a8a8a8"
                        android:textSize="@dimen/dimen_50px" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/personal_qrcode_business_date_layout"
                android:layout_marginLeft="@dimen/dimen_140px"
                android:layout_marginRight="@dimen/dimen_140px"
                android:layout_marginTop="@dimen/dimen_40px"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/personal_qrcode_business_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dimen_40px"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_qrcode_business" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="@string/personal_qrcode_business_tips_1"
                    android:textColor="@color/textGrayLight"
                    android:textSize="@dimen/dimen_50px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dimen_80px"
                    android:layout_marginTop="@dimen/dimen_30px"
                    android:layout_weight="0"
                    android:text="@string/personal_qrcode_business_tips_2"
                    android:textColor="@color/textGrayLight"
                    android:textSize="@dimen/dimen_50px" />
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
