<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <EditText
        android:id="@+id/etContent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_300px"
        android:background="@null"
        android:clickable="true"
        android:gravity="top"
        android:textColorHint="@color/textGrayLight"
        android:hint="@string/publish_text_hint"
        android:maxLength="100"
        android:minHeight="@dimen/dimen_100px"
        android:layout_marginLeft="@dimen/dimen_20px"
        android:padding="@dimen/dimen_20px"
        android:scrollbars="vertical"
        android:textColor="@color/textGrayDeep"
        android:textCursorDrawable="@null" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/dimen_20px"
        android:layout_marginRight="@dimen/dimen_20px"
        android:layout_marginBottom="@dimen/dimen_20px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/etContent"
            android:gravity="left"
            android:paddingRight="10dp"
            android:text="100"
            android:layout_weight="0"
            android:visibility="visible"
            android:textColor="@color/textGrayDeep"
            android:textSize="@dimen/dimen_40px" />

        <TextView
            android:id="@+id/tvNum_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/etContent"
            android:contentDescription="输入文字提示"
            android:gravity="right"
            android:layout_gravity="center"
            android:paddingRight="10dp"
            android:layout_weight="0"
            android:text="输入文字提示"
            android:textColor="@color/textGrayDeep"
            android:textSize="@dimen/dimen_40px" />

    </LinearLayout>

    <View
        android:id="@+id/vLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dimen_40px"
        android:background="@color/publish_line_color" />
</LinearLayout>