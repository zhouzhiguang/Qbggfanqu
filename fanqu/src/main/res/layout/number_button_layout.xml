<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_100px"
    android:background="@drawable/bg_number_button"
    android:divider="@drawable/divider_horizontal"
    android:orientation="horizontal"
    android:gravity="center_vertical"

    android:showDividers="middle">

    <TextView
        android:id="@+id/button_sub"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/number_bg_button_left"
        android:gravity="center"
        android:layout_gravity="top"
        android:text="ä¸€"
        android:visibility="gone"
        android:padding="@dimen/dimen_20px"
        android:textColor="#000"
        android:minWidth="@dimen/dimen_30px"
        android:textSize="@dimen/dimen_40px"/>
    <ImageView
        android:id="@+id/button_minus_image"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:scaleType="center"
        android:src="@mipmap/ic_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/text_count"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@null"
        android:cursorVisible="true"
        android:digits="0123456789"
        android:gravity="center"
        android:singleLine="true"
        android:inputType="number"
        android:minWidth="@dimen/dimen_300px"
        android:paddingBottom="@dimen/dimen_6px"
        android:paddingLeft="@dimen/dimen_8px"
        android:paddingRight="@dimen/dimen_8px"
        android:paddingTop="@dimen/dimen_5px"
        android:text="555"
        android:textSize="@dimen/dimen_60px"
        android:textColor="@color/textGrayDeep"
        android:textCursorDrawable="@null"/>

    <TextView
        android:id="@+id/button_add"
        android:layout_width="0dp"
        android:minWidth="@dimen/dimen_100px"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="gone"
        android:background="@drawable/number_bg_button_right"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="+"
        android:textColor="@color/textGrayDeep"
        android:textSize="@dimen/dimen_80px"/>
    <ImageView
        android:id="@+id/button_add_image"
        android:layout_width="wrap_content"
        android:src="@mipmap/ic_plus"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:layout_weight="1" />
</LinearLayout>