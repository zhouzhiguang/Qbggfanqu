<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_160px"
    android:background="@color/white"
    android:id="@+id/opened_city_layout"

    android:layout_marginTop="@dimen/dimen_10px"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/opened_city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:text="东莞"
        android:textColor="@color/text_color_GrayLight_more"
        android:textSize="@dimen/dimen_60px" />

    <ImageView
        android:id="@+id/opened_city_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/dimen_40px"
        android:layout_weight="0"
        android:visibility="gone"
        android:src="@mipmap/ic_select" />
</LinearLayout>