<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--选中效果-->
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/white" />
            <stroke android:width="@dimen/dimen_2px" android:color="@color/red" />
            <corners android:radius="@dimen/dimen_20px" />
        </shape>
    </item>
    <!--默认效果-->
    <item>
        <shape>
            <solid android:color="@color/white" />
            <stroke android:width="@dimen/dimen_2px" android:color="@color/textGrayLight" />
            <corners android:radius="@dimen/dimen_20px" />
        </shape>
    </item>

</selector>